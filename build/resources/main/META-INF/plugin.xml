<idea-plugin>
  <version>1.0-SNAPSHOT</version>
  <change-notes>
      First version</change-notes>
  <idea-version since-build="193.5662" until-build="193.*"/>
  <id>com.dharmadeveloper.EyesSaver</id>
  <name>Eyes Saver</name>
  <vendor email="dharmadeveloper108@gmail.com" url="http://www.dharmadeveloper.com">DharmaDev</vendor>
  <description>
    A simple plugin to remind you to take care of your eyes and look away from the screen periodically.
    </description>
  <depends>com.intellij.modules.platform</depends>
  <extensions defaultExtensionNs="com.intellij">
    <themeProvider id="6afe21b2-c651-4a03-a889-556d099724d4" path="/eyes_saver.theme.json"/>
  </extensions>
  <actions>
    <group id="EyesSaver.TopMenu" text="_Eyes Saver" description="Eyes Saver main class">
      <add-to-group group-id="MainMenu" anchor="last"/>
      <action id="EyesSaver" class="EyesSaver" icon="/images/eyessaver.png" text="_Start" description="Eyes saver"/>
    </group>
  </actions>
</idea-plugin>
