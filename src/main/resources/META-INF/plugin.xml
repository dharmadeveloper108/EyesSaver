<idea-plugin>
    <id>com.dharmadeveloper.EyesSaver</id>
    <name>Eyes Saver</name>
    <vendor email="dharmadeveloper108@gmail.com" url="http://www.dharmadeveloper.com">DharmaDev</vendor>

    <description><![CDATA[
    A simple plugin to remind you to take care of your eyes and look away from the screen periodically.
    ]]></description>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
        <themeProvider id="6afe21b2-c651-4a03-a889-556d099724d4" path="/eyes_saver.theme.json"/>
    </extensions>

    <actions>
        <!-- Add your actions here -->
        <group id="EyesSaver.TopMenu"
               text="_Eyes Saver"
               description="Eyes Saver main class">
            <add-to-group group-id="MainMenu" anchor="last"/>
            <action id="EyesSaver"
                    class="EyesSaver"
                    icon="/images/eyessaver.png"
                    text="_Start"
                    description="Eyes saver"/>
        </group>
    </actions>
</idea-plugin>