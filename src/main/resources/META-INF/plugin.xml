<idea-plugin>
    <id>com.francescaidarocci.EyesSaver</id>
    <name>Eyes Saver</name>
    <vendor email="francescaida.rocci@gmail.com" url="http://www.francescaidarocci.com">Self</vendor>

    <description><![CDATA[
    A simple plugin to remind you to look away from the screen after 2 hours of work.
    ]]></description>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
        <themeProvider id="6afe21b2-c651-4a03-a889-556d099724d4" path="/eyes_saver.theme.json"/>
    </extensions>

    <actions>
        <!-- Add your actions here -->
        <group id="EyesSaver.TopMenu"
               text="_TopMenu"
               description="Eyes Saver main class">
            <add-to-group group-id="MainMenu" anchor="last"/>
            <action id="EyesSaver"
            class="EyesSaver"
            text="_EyesSaver"
            description="Eyes saver"/>
        </group>
    </actions>
</idea-plugin>